require 'rubygems'
require 'jeweler2'
Jeweler::Tasks.new do |s|
  s.name = %q{sane}
  s.homepage = 'http://github.com/rogerdpack/sane'
  s.authors = ["Roger Pack"]
  s.description = s.summary =  %q{Helpers for ruby core classes to make life easier-i.e. things that are missing from core but should be there <sigh>}
  s.email = ["rogerdpack@gmail.com"]
  s.add_dependency 'os' # *necessary*
  #s.add_dependency 'andand' # turns out to be pretty useful...
end

Jeweler::RubygemsDotOrgTasks.new
